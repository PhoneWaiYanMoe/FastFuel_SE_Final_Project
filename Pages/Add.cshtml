@page
@model WebStaff.Pages.AddModel

<h2>Add Agent</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="AgentAdd.Name"></label>
        <input asp-for="AgentAdd.Name" class="form-control" />
        <span asp-validation-for="AgentAdd.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentAdd.Email"></label>
        <input asp-for="AgentAdd.Email" class="form-control" />
        <span asp-validation-for="AgentAdd.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentAdd.Password"></label>
        <input asp-for="AgentAdd.Password" class="form-control" />
        <span asp-validation-for="AgentAdd.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentAdd.Location"></label>
        <input asp-for="AgentAdd.Location" class="form-control" />
        <span asp-validation-for="AgentAdd.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentAdd.CreationDate"></label>
        <input asp-for="AgentAdd.CreationDate" class="form-control" />
        <span asp-validation-for="AgentAdd.CreationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentAdd.Description"></label>
        <input asp-for="AgentAdd.Description" class="form-control" />
        <span asp-validation-for="AgentAdd.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Agents" class="btn btn-secondary">Cancel</a>
</form>
