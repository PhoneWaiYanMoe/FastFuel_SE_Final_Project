@page "{id:int}"
@model WebStaff.Pages.EditFoodModel
@{
    ViewData["Title"] = "Edit Food Item";
}

<h2>Edit Food Item</h2>

<form method="post">
    <!-- Include a hidden input field for FoodId -->
    <input type="hidden" name="FoodId" value="@Model.Food.FoodId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Food.Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Food.Description" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Food.Price" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" id="Category" name="Category" value="@Model.Food.Category" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
